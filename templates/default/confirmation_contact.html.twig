{% extends 'base.html.twig' %}

{% block title %}Accueil {% endblock %}

{% block body %}
    <div class="container" style="text-align: center; box-shadow: #f0f0f0">
        {# Read and display every flash message available. #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <button href="{{ path('default') }}" class="button btn btn-primary">Retour Ã  la page d'accueil</button>
    </div>



{% endblock %}
